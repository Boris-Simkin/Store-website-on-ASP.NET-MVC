@model eShopProject.Models.ProductView
@{
    ViewBag.Title = "AddProduct";
}

<div class="container" id="addProduct">
    <div class="col-lg-4 col-md-4 col-sm-4">


        @using (Html.BeginForm("SaveProduct", "Home", FormMethod.Post,
                                            new { enctype = "multipart/form-data" }))
        {

            <div class="row">
                    <div class="form-group">
                        <div class="input-group">
                            @Html.DisplayNameFor(x => x.Title)
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control input-md", placeholder = @Html.DisplayNameFor(x => x.Title) })

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="input-group">
                            @Html.DisplayNameFor(x => x.ShortDescription)
                            @Html.TextBoxFor(x => x.ShortDescription, new { @class = "form-control input-md", placeholder = @Html.DisplayNameFor(x => x.ShortDescription) })

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="input-group">
                            <div>@Html.DisplayNameFor(x => x.LongDescription)</div>
                            @Html.TextAreaFor(x => x.LongDescription, new { @class = "form-control input-md", placeholder = @Html.DisplayNameFor(x => x.LongDescription) })

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="input-group">
                            @Html.DisplayNameFor(x => x.Price)
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control input-md", placeholder = @Html.DisplayNameFor(x => x.Price) })

                        </div>
                    </div>
                </div>

                 <div>
                     תמונות
                     </div>
            <div class="input-group">
                <span class="input-group-btn">
                    <button id="fake-file-button-browse1" type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-file"></span>
                    </button>
                </span>
                <input type="file" id="file1" name="file1" style="display:none">
                <input type="text" id="fake-file-input-name1" disabled="disabled" placeholder="File not selected" class="form-control">

            </div>

            <div class="input-group">
                <span class="input-group-btn">
                    <button id="fake-file-button-browse2" type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-file"></span>
                    </button>
                </span>
                <input type="file" id="file2" name="file2" style="display:none">
                <input type="text" id="fake-file-input-name2" disabled="disabled" placeholder="File not selected" class="form-control">

            </div>

            <div class="input-group">
                <span class="input-group-btn">
                    <button id="fake-file-button-browse3" type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-file"></span>
                    </button>
                </span>
                <input type="file" id="file3" name="file3" style="display:none">
                <input type="text" id="fake-file-input-name3" disabled="disabled" placeholder="File not selected" class="form-control">

            </div>
            <br/>
            <br />
            <input type="submit" name="submit" value="הוסף" class="btn btn-info"/>

        }




        <script type="text/javascript">
            // Fake file upload
            document.getElementById('fake-file-button-browse1').addEventListener('click', function() {
                document.getElementById('file1').click();
            });

            document.getElementById('file1').addEventListener('change', function () {
	            document.getElementById('fake-file-input-name1').value = this.value;

	            document.getElementById('fake-file-button-upload1').removeAttribute('disabled');
            });

            document.getElementById('fake-file-button-browse2').addEventListener('click', function () {
                document.getElementById('file2').click();
            });

            document.getElementById('file2').addEventListener('change', function () {
                document.getElementById('fake-file-input-name2').value = this.value;

                document.getElementById('fake-file-button-upload2').removeAttribute('disabled');
            });

            document.getElementById('fake-file-button-browse3').addEventListener('click', function () {
                document.getElementById('file3').click();
            });

            document.getElementById('file3').addEventListener('change', function () {
                document.getElementById('fake-file-input-name3').value = this.value;

                document.getElementById('fake-file-button-upload3').removeAttribute('disabled');
            });
        </script>


    </div>
    <div class="col-lg-3 col-md-3 col-sm-3">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong> @Html.ValidationSummary(false, "", new { @class = "alert alert-danger text-danger heb-text" })</strong>
            </div>
        }

    </div>

</div>

