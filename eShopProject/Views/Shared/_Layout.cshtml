<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <!-- Theme CSS -->
    <link href="~/Content/freelancer.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>

<body id="page-top" class="index">

    @{
        string MainAction = string.Empty;
        if (ViewContext.RouteData.Values["action"].ToString() != "Main")
        { MainAction = Url.Action("Main"); }
    }


    @if (ViewContext.RouteData.Values["action"].ToString() != "Main")
    {
        <a href="@Url.Action("Main")#about">אודותנו</a>
    }


    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="row">
                <div class="col-lg-10">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header page-scroll">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            תפריט <i class="fa fa-bars"></i>
                        </button>
                        <a class="navbar-brand" href="#page-top">eShop Project</a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">

                            <li class="hidden">
                                <a href="#page-top"></a>
                            </li>

                            <li class="page-scroll">
                                @Html.ActionLink("סל קניות", "ShoppingCard")
                            </li>
                            <li class="page-scroll">
                                <a href="@MainAction#about">אודותנו</a>
                            </li>
                            <li class="page-scroll">
                                @Html.ActionLink("רישום פרטים אישיים", "Registration")
                            </li>
                            <li class="page-scroll">
                                <a href="@MainAction#mainPage">מסך ראשי</a>
                            </li>
                            <li class="page-scroll">
                                <a href="@MainAction#siteMap">מפת האתר</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 partial">
                    @Html.Partial("~/Views/_Login.cshtml", new eShopProject.Models.UserView())
                </div>
            </div>

        </div>
    </nav>

    @RenderBody()






    <!-- Footer -->
    <footer class="text-center" id="about">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                        <h3>Location</h3>
                        <p>
                            3481 Melrose Place
                            <br>Beverly Hills, CA 90210
                        </p>
                    </div>
                    <div class="footer-col col-md-4">

                    </div>
                    <div class="footer-col col-md-4">
                        <h3>אודות הפרוייקט</h3>
                        <p> </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        &copy; 2016 בוריס סימקין
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <!-- Theme JavaScript -->
    <script src="~/Scripts/freelancer.min.js"></script>
</body>
</html>